
extends layout

block content
    nav.navbar.navbar-expand.navbar-light.bg-light
        .nav-item
            .navbar-brand Taano.co | Balance $!{balnce}USD
        .navbar-nav.ml-auto
            .nav-item
                button.btn.navbar-btn.btn-outline-dark#btn-logout Sign Out
    .container.mt-5
        .row
            include account1
            include point
            include transaction

    include modals/alert
    include modals/confirm

block scripts
    script(src='/js/views/home.js')
    script(src='/js/controllers/homeController.js')
    script(src='/js/form-validators/accountValidator.js')
    script(src='/js/form-validators/pointValidator.js')
    script(src='/js/form-validators/emailValidator.js')
    script.
       $(document).ready(function () {
            size_li = $("#myList li").length;
            x=10;
            $('#myList li:lt('+x+')').show();
            $('#loadMore').click(function () {
                x= (x+5 <= size_li) ? x+5 : size_li;
                $('#myList li:lt('+x+')').show();
            });
            $('#showLess').click(function () {
                x=(x-5<0) ? 3 : x-5;
                $('#myList li').not(':lt('+x+')').hide();
            });
        });